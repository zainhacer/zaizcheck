<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">
    <RelativeLayout
        android:id="@+id/bganimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bganimation"
        >
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bganimation2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bganimation"
        >
    </RelativeLayout>

    <LinearLayout

        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/logo"
            android:background="@drawable/logo"
            android:layout_width="300dp"
            android:layout_height="92dp"/>

        <Button
            android:id="@+id/btn_play"
            android:background="@drawable/buttonplay"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:onClick="onClick"
            android:fontFamily="@font/font"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:text="@string/play" />
        <Button
            android:id="@+id/btn_options"
            android:background="@drawable/buttonoptions"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:onClick="onClick"
            android:fontFamily="@font/font"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:text="@string/options" />
        <Button
            android:id="@+id/btn_quit"
            android:background="@drawable/buttonexit"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:onClick="onClick"
            android:fontFamily="@font/font"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:text="@string/quit" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/img_more"
                android:background="@drawable/moregames"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:id="@+id/img_share"
                android:background="@drawable/share"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:onClick="onClick" />



            <Button
                android:id="@+id/img_rate"
                android:background="@drawable/rate"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:onClick="onClick" />
            <Button
                android:id="@+id/img_politics"
                android:background="@drawable/privacy"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:onClick="onClick" />





        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/adVieww"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>